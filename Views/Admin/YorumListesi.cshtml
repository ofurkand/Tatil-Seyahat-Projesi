@using TatilSeyahatProje.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ var onaylilar = Model.Where(x => x.Gorunurluk == true).ToList(); var bekleyenler = Model.Where(x => x.Gorunurluk == false).ToList();}
@{ if (bekleyenler.Count() > 0)
    {
        <h2>Onay Bekleyenler</h2>

        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Kullanıcı</th>
                <th>Mail</th>
                <th>Yorum</th>
                <th>BlogID</th>
                <th>Sil</th>
                <th>Onayla</th>
            </tr>
            @foreach (var x in bekleyenler)
            {
                <tr>
                    <td>@x.ID</td>
                    <td>@x.KullaniciAdi</td>
                    <td>@x.Mail</td>
                    <td>@x.Yorum</td>
                    <td><a href="/Blog/BlogDetay/@x.BlogID/" style="text-decoration:underline; color:black;">@x.Blog.Baslik</a></td>
                    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Admin/YorumOnayla/@x.ID" class="btn btn-success">Onayla</a></td>
                </tr>
            }
        </table>
    }}


<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>BlogID</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in onaylilar)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td><a href="/Blog/BlogDetay/@x.BlogID/" style="text-decoration:underline; color:black;">@x.Blog.Baslik</a></td>
            <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
