@using TatilSeyahatProje.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var x in Model)
    {
    <div class="left">
        <div class="bot-left">
            <img src="@x.BlogIMG" alt="" style="width:400px; height:150px;"/>
        </div>
        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            @{var y = ""; if (x.Aciklama.Length > 85)
                {
                    y = x.Aciklama.Substring(0, 82) + "...";
                }
                else
                {
                    y = x.Aciklama;
                }
            }
                <p>@y</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
    </div>
    }
    @Html.Action("Partial2", "Home")
    <div class="clear"></div>
</div>